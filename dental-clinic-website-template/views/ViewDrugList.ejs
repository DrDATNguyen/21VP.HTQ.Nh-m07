    <script src="/twentytwenty/jquery.twentytwenty.js"></script>

    <!-- Template Javascript -->
    <script src="/main.js"></script>
  
      <script>
        async function deleteDrug(drugId) {
          try {
            const response = await fetch(`/deleteDrug/${drugId}`, {
              method: 'DELETE',
            });
      
            if (response.ok) {
              // Remove the deleted row from the HTML
              const drugRow = document.getElementById(`drug${drugId}`);
              drugRow.parentNode.removeChild(drugRow);
            } else {
              console.error('Error deleting drug:', response.statusText);
            }
          } catch (error) {
            console.error('Error during drug deletion:', error);
          }
        }
      </script>
      <% if (typeof message !== 'undefined' && message) { %>
        <script>
            var alertMessage = '<%= message %>';
            alert(alertMessage);
        </script>
    <% } %>
</body>

