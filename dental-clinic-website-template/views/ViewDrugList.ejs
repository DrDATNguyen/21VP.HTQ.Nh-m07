    <div class="container-fluid mt-5">
        <table class="table table-bordered">
            <thead>
              <tr>
                <th>Mã thuốc</th>
                <th>Tên thuốc</th>
                <th>Số lượng còn</th>
                <th>Đơn vị tính</th>
                <th>Chỉ định</th>
                <th>Hạn sử dụng</th>
                <th>Thao tác</th>
              </tr>
            </thead>
            <tbody>
              <% drugList.forEach(drug => { %>
                <tr id="drug<%= drug.MaThuoc %>">
                  <td><%= drug.MaThuoc %></td>
                  <td contenteditable="true" class="editable" name ="TenThuoc" data-field="TenThuoc"><%= drug.TenThuoc %></td>
                  <td contenteditable="true" class="editable" data-field="Soluongton"><%= drug.Soluongton %></td>
                  <td contenteditable="true" class="editable" data-field="Donvitinh"><%= drug.Donvitinh %></td>
                  <td contenteditable="true" class="editable" data-field="Chidinh"><%= drug.Chidinh %></td>
                  <td contenteditable="true" class="editable" data-field="HSD"><%= drug.HSD %></td>
                  <td>
                    <!-- <div class="btn-group mr-2" role="group" aria-label="Button group with nested dropdown">
                        <form method="post" action="/updateDrug">
                          <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                      </div> -->
                      
                      <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button class="btn btn-danger" onclick="deleteDrug('<%= drug.MaThuoc %>')">Delete</button>
                      </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
    </div>

    
    <div class="container-fluid bg-dark text-light py-5 wow fadeInUp" data-wow-delay="0.3s" style="margin-top: 400px;">
        <div class="container pt-5">
            <div class="row g-5 pt-4">
                <div class="col-lg-2 col-md-6">
                    <h3 class="text-white mb-4">About us</h3> 
                </div>
                <div class="col-lg-2 col-md-6">
                    <h3 class="text-white mb-4">Donate</h3>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h3 class="text-white mb-4">Programs</h3>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h3 class="text-white mb-4">Blog</h3>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h3 class="text-white mb-4">Contact us</h3>
                </div>
            </div>
        </div>
    </div>
    
        
    <div class="container-fluid text-light py-4" style="background: #051225;">
        <div class="container">
            <div class="row g-0">
