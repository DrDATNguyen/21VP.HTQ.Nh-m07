    <div class="container-fluid mt-5">
        <table class="table table-bordered" id="accountTable">
            <thead>
              <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>PassWord</th>
              </tr>
            </thead>
            <tbody>
                <% if (typeof result !== 'undefined' && result.length > 0) { %>
                    <% result.forEach(account => { %>
                      <tr>
                        <td contenteditable="true" class="editable" name="Name" data-field="HotenKH"><%= account.Name %></td>
                        <td contenteditable="true" class="editable" data-field="PhoneNumber"><%= account.PhoneNumber %></td>
                        <td contenteditable="true" class="editable" data-field="PassWord"><%= account.PassWord %></td>
                        <td>
                            <div class="form-check form-switch">
                                <input
                                  class="form-check-input"
                                  type="checkbox"
                                  id="blockToggle<%= account.CustomerID %>"
                                  <%= account.IsBlocked ? 'checked' : '' %>
                                  data-account-id="<%= account.CustomerID %>"
                                >
                                <label class="form-check-label" for="blockToggle<%= account.CustomerID %>">
                                  <%= account.IsBlocked ? 'Blocked' : 'Active' %>
                                </label>
                              </div>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="4">No accounts found.</td>
                    </tr>
                  <% } %>
              </tbody>
          </table>
    </div>

    
